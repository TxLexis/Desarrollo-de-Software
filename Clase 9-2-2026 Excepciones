        }catch (IndexFullException e){
            System.out.println("Capacidad llena:" + e.getModel());
            JOptionPane.showMessageDialog(
                    this,
                    "No hay escpacio para agregar m치s valores",
                    "Error",
                    JOptionPane.ERROR_MESSAGE
            );

        } catch (Exception e) {
            throw new RuntimeException(e);
        }
    }
