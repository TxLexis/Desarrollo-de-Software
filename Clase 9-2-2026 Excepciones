public boolean add(Book book) throws IndexFullException {
        // false si est치 lleno
        if(book == null || saveIndex >= books.length){
            //Excepci칩n
            throw new IndexFullException("Capacidad de libros llena");
        }



public class IndexFullException extends Exception{
    private String model;

    public IndexFullException(String model){
        super("Capacidad de " + model + " lleno");
        this.model =  model;
    }

    public String getModel(){
        return model;
    }
}


